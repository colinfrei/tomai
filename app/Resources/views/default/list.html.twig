{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="jumbotron">
            <h1>Tomai - be transparent.</h1>
        </div>
        <div class="col-lg-12">
            <p class="lead">
                What good is making email public if you can't actually find it?
            </p>
            <p class="lead">Listed below are all the Google groups managed through Tomai.</p>
        </div>

        <ul class="list-unstyled tomai-list">
            {% for copyjob in copyJobs %}
                <li class="col-md-3">
                    <div class="bg-info">
                        <a class="lead" href="{{ copyjob.groupUrl }}">{{ copyjob.name }}</a><br />
                        by {{ copyjob.user.email }}
                    </div>
                </li>
            {% endfor %}
            <li class="col-md-3">
                <div class="bg-primary">
                    <a class="lead" style="color: white;" href="{{ url('manage-copyjobs') }}"><strong>Set up your own!</strong></a>
                </div>
            </li>
        </ul>
    </div>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="{{ asset('assets/vendor/jquery/dist/jquery.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('assets/vendor/chosen/chosen.jquery.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('assets/vendor/bootstrap/dist/js/bootstrap.min.js') }}"></script>
    <script type="text/javascript">
        $('.chosen').chosen({'search_contains': true});
    </script>
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/vendor/chosen/chosen.min.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/vendor/bootstrap/dist/css/bootstrap.min.css') }}">
    <style>
        .tomai-list li {
            padding: 5px;
        }
        .tomai-list li div {
            padding: 10px;
            min-height: 120px;
        }
        .tomai-list li div h3 {
            margin-top: 0;
        }
    </style>
{% endblock %}

